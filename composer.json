{
    "name": "romansh/laravel-creem",
    "description": "A Laravel package for Creem.io payment provider",
    "keywords": ["laravel", "creem", "payment", "subscription", "checkout"],
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Shalabanov",
            "email": "shalabanov@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "illuminate/routing": "^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Romansh\\LaravelCreem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Romansh\\LaravelCreem\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Romansh\\LaravelCreem\\CreemServiceProvider"
            ],
            "aliases": {
                "Creem": "Romansh\\LaravelCreem\\Facades\\Creem"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
