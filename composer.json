{
    "name": "romansh/laravel-creem",
    "description": "A Laravel package for Creem.io payment provider with support for products, checkouts, subscriptions, transactions, licenses, and discount codes",
    "keywords": [
        "laravel",
        "creem",
        "payment",
        "subscription",
        "checkout",
        "billing",
        "payments",
        "saas",
        "license-management",
        "discount-codes"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Roman Shalabanov",
            "email": "shalabanov@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^10.0|^11.0",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "Romansh\\LaravelCreem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Romansh\\LaravelCreem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "format-test": "vendor/bin/pint --test"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Romansh\\LaravelCreem\\CreemServiceProvider"
            ],
            "aliases": {
                "Creem": "Romansh\\LaravelCreem\\Facades\\Creem"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}